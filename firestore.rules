
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAuthed() {
      return request.auth != null;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isAdmin() {
      return isAuthed() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             getUserData().role == 'admin';
    }
    
    function isTeacher() {
      return isAuthed() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             getUserData().role == 'teacher';
    }

    function hasPermission(permission) {
      return isAuthed() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             (isAdmin() || getUserData().permissions.hasAny([permission]));
    }

    match /{document=**} {
      allow read, write: if false;
    }

    match /users/{userId} {
      allow read: if isAuthed() && (request.auth.uid == userId || isAdmin());
      allow create: if isAuthed() && request.auth.uid == userId;
      allow update: if isAuthed() && (request.auth.uid == userId || isAdmin());
      allow list: if isAdmin();
    }

    match /emailLogs/{id} {
      allow read, write: if isAuthed() && (isAdmin() || isTeacher());
    }

    match /messageLogs/{id} {
      allow read: if isAuthed() && (isAdmin() || isTeacher());
      allow create: if isAuthed() && hasPermission('manage:messaging');
      allow update: if isAuthed() && hasPermission('manage:messaging');
      allow delete: if isAdmin();
    }

    match /staff/{id} {
      allow read: if isAuthed();
      allow write: if isAdmin();
    }
    
    match /school/info {
      allow read: if true;
      allow write: if isAuthed();
    }

    match /students/{id} {
      allow read: if isAuthed();
      allow write: if isAdmin();
    }

    match /attendance/{id} {
      allow read: if isAuthed();
      allow write: if isAdmin() || isTeacher();
    }
    
    match /results/{id} {
      allow read: if isAuthed();
      allow write: if isAdmin() || isTeacher();
    }

    match /feeCollections/{id} {
      allow read: if isAuthed();
      allow write: if isAdmin() || isTeacher();
    }

    match /transactions/{id} {
      allow read: if isAuthed();
      allow write: if isAdmin() || isTeacher();
    }

    match /holidays/{id} {
      allow read: if isAuthed();
      allow write: if isAdmin();
    }

    match /classRoutines/{id} {
      allow read: if isAuthed();
      allow write: if isAdmin();
    }
    
    match /examRoutines/{id} {
      allow read: if isAuthed();
      allow write: if isAdmin();
    }

    match /exams/{id} {
      allow read: if isAuthed();
      allow write: if isAdmin();
    }

    match /notices/{id} {
      allow read: if isAuthed();
      allow write: if isAdmin();
    }
  }
}
