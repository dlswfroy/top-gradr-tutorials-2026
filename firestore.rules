
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAuthed() {
      return request.auth != null;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isAdmin() {
      return isAuthed() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             getUserData().role == 'admin';
    }
    
    function isTeacher() {
      return isAuthed() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             getUserData().role == 'teacher';
    }

    // প্রতিষ্ঠানের তথ্য সবাই দেখতে পারবে, কিন্তু শুধু এডমিন পরিবর্তন করতে পারবে
    match /school/info {
      allow read: if true;
      allow write: if isAuthed();
    }

    // ইউজার প্রোফাইল রুলস
    match /users/{userId} {
      allow read: if isAuthed() && (request.auth.uid == userId || isAdmin());
      allow create: if isAuthed() && request.auth.uid == userId;
      allow update: if isAuthed() && (request.auth.uid == userId || isAdmin());
      // প্রথম ইউজার চেক করার জন্য লিস্ট পারমিশন প্রয়োজন
      allow list: if isAuthed(); 
    }

    // ক্লাস রুটিন, নোটিশ, ছুটি ইত্যাদি সকল লগইন করা ইউজার পড়তে পারবে
    match /classRoutines/{id} {
      allow read: if isAuthed();
      allow write: if isAdmin();
    }

    match /notices/{id} {
      allow read: if isAuthed();
      allow write: if isAdmin();
    }

    match /holidays/{id} {
      allow read: if isAuthed();
      allow write: if isAdmin();
    }
    
    match /exams/{id} {
      allow read: if isAuthed();
      allow write: if isAdmin();
    }

    // শিক্ষার্থী ও শিক্ষক ডাটা
    match /students/{id} {
      allow read: if isAuthed();
      allow write: if isAdmin();
    }
    
    match /staff/{id} {
      allow read: if isAuthed();
      allow write: if isAdmin();
    }

    // হাজিরা, রেজাল্ট এবং মেসেজ লগ (শিক্ষক ও এডমিন উভয়েই পারবে)
    match /attendance/{id} {
      allow read: if isAuthed();
      allow write: if isAuthed();
    }
    
    match /results/{id} {
      allow read: if isAuthed();
      allow write: if isAuthed();
    }

    match /messageLogs/{id} {
      allow read: if isAuthed();
      allow write: if isAuthed();
    }

    match /emailLogs/{id} {
      allow read, write: if isAuthed();
    }

    // হিসাব-নিকাশ
    match /feeCollections/{id} {
      allow read: if isAuthed();
      allow write: if isAuthed();
    }

    match /transactions/{id} {
      allow read: if isAuthed();
      allow write: if isAuthed();
    }
  }
}
