{
  "entities": {
    "student": {
      "title": "Student",
      "description": "A student in the school",
      "type": "object",
      "properties": {
        "roll": { "type": "number" },
        "className": { "type": "string" },
        "academicYear": { "type": "string" },
        "studentNameBn": { "type": "string" },
        "studentNameEn": { "type": "string" },
        "fatherNameBn": { "type": "string" },
        "fatherNameEn": { "type": "string" },
        "motherNameBn": { "type": "string" },
        "motherNameEn": { "type": "string" },
        "dob": { "type": "string", "format": "date-time" },
        "birthRegNo": { "type": "string" },
        "guardianMobile": { "type": "string" },
        "studentMobile": { "type": "string" },
        "fatherNid": { "type": "string" },
        "motherNid": { "type": "string" },
        "gender": { "type": "string" },
        "religion": { "type": "string" },
        "group": { "type": "string" },
        "optionalSubject": { "type": "string" },
        "presentVillage": { "type": "string" },
        "presentUnion": { "type": "string" },
        "presentPostOffice": { "type": "string" },
        "presentUpazila": { "type": "string" },
        "presentDistrict": { "type": "string" },
        "permanentVillage": { "type": "string" },
        "permanentUnion": { "type": "string" },
        "permanentPostOffice": { "type": "string" },
        "permanentUpazila": { "type": "string" },
        "permanentDistrict": { "type": "string" },
        "photoUrl": { "type": "string" }
      },
      "required": ["roll", "className", "academicYear", "studentNameBn", "fatherNameBn", "motherNameBn", "photoUrl"]
    },
    "staff": {
      "title": "Staff",
      "description": "A teacher or staff member of the school.",
      "type": "object",
      "properties": {
        "employeeId": { "type": "string" },
        "nameBn": { "type": "string" },
        "nameEn": { "type": "string" },
        "designation": { "type": "string" },
        "subject": { "type": "string" },
        "mobile": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "joinDate": { "type": "string", "format": "date-time" },
        "education": { "type": "string" },
        "address": { "type": "string" },
        "photoUrl": { "type": "string" },
        "isActive": { "type": "boolean" },
        "staffType": { "type": "string", "enum": ["teacher", "staff"] }
      },
      "required": ["employeeId", "nameBn", "designation", "mobile", "joinDate", "photoUrl", "staffType", "isActive"]
    },
    "schoolInfo": {
      "title": "School Information",
      "description": "General information about the school.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "nameEn": { "type": "string" },
        "eiin": { "type": "string" },
        "code": { "type": "string" },
        "address": { "type": "string" },
        "logoUrl": { "type": "string" }
      },
      "required": ["name"]
    },
    "holiday": {
      "title": "Holiday",
      "description": "A holiday record.",
      "type": "object",
      "properties": {
        "date": { "type": "string", "format": "date" },
        "description": { "type": "string" }
      },
      "required": ["date", "description"]
    },
    "attendanceRecord": {
      "title": "Attendance Record",
      "description": "Daily attendance record for a class.",
      "type": "object",
      "properties": {
        "date": { "type": "string", "format": "date" },
        "academicYear": { "type": "string" },
        "className": { "type": "string" },
        "attendance": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "studentId": { "type": "string" },
              "status": { "type": "string", "enum": ["present", "absent"] }
            },
            "required": ["studentId", "status"]
          }
        }
      },
      "required": ["date", "academicYear", "className", "attendance"]
    }
  },
  "auth": {
    "providers": ["anonymous"]
  },
  "firestore": {
    "/students/{studentId}": {
      "schema": { "$ref": "#/entities/student" },
      "description": "Stores individual student records."
    },
    "/staff/{staffId}": {
      "schema": { "$ref": "#/entities/staff" },
      "description": "Stores individual teacher and staff records."
    },
    "/school/info": {
      "schema": { "$ref": "#/entities/schoolInfo" },
      "description": "Stores general school information. This is a single document."
    },
    "/holidays/{holidayId}": {
      "schema": { "$ref": "#/entities/holiday" },
      "description": "Stores holiday records."
    },
    "/attendance/{attendanceId}": {
      "schema": { "$ref": "#/entities/attendanceRecord" },
      "description": "Stores daily attendance records."
    },
    "/results/{resultId}": {
      "schema": { "$ref": "#/entities/result" },
      "description": "Stores results for a class in a particular subject."
    }
  }
}
