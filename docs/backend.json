{
  "entities": {
    "user": {
      "title": "User",
      "description": "Represents an application user with a role.",
      "type": "object",
      "properties": {
        "uid": { "type": "string", "description": "The user's unique ID from Firebase Auth." },
        "email": { "type": "string", "format": "email", "description": "The user's email address." },
        "role": { "type": "string", "enum": ["admin", "teacher"], "description": "The user's role." },
        "permissions": {
          "type": "array",
          "items": { "type": "string" },
          "description": "A list of permission strings."
        }
      },
      "required": ["uid", "email", "role"]
    },
    "student": {
      "title": "Student",
      "description": "A student in the school",
      "type": "object",
      "properties": {
        "generatedId": { "type": "string", "description": "The auto-generated 8-digit student ID (YYCCRRRR)." },
        "roll": { "type": "number" },
        "className": { "type": "string" },
        "academicYear": { "type": "string" },
        "studentNameBn": { "type": "string" },
        "studentNameEn": { "type": "string" },
        "fatherNameBn": { "type": "string" },
        "fatherNameEn": { "type": "string" },
        "motherNameBn": { "type": "string" },
        "motherNameEn": { "type": "string" },
        "dob": { "type": "string", "format": "date-time" },
        "birthRegNo": { "type": "string" },
        "guardianMobile": { "type": "string" },
        "studentMobile": { "type": "string" },
        "fatherNid": { "type": "string" },
        "motherNid": { "type": "string" },
        "gender": { "type": "string" },
        "religion": { "type": "string" },
        "group": { "type": "string" },
        "optionalSubject": { "type": "string" },
        "presentVillage": { "type": "string" },
        "presentUnion": { "type": "string" },
        "presentPostOffice": { "type": "string" },
        "presentUpazila": { "type": "string" },
        "presentDistrict": { "type": "string" },
        "permanentVillage": { "type": "string" },
        "permanentUnion": { "type": "string" },
        "permanentPostOffice": { "type": "string" },
        "permanentUpazila": { "type": "string" },
        "permanentDistrict": { "type": "string" },
        "photoUrl": { "type": "string" }
      },
      "required": ["roll", "className", "academicYear", "studentNameBn", "fatherNameBn", "motherNameBn", "photoUrl"]
    },
    "staff": {
      "title": "Staff",
      "description": "A teacher or staff member of the school.",
      "type": "object",
      "properties": {
        "employeeId": { "type": "string", "description": "The auto-generated 6-digit employee ID (YYYYSS)." },
        "nameBn": { "type": "string" },
        "nameEn": { "type": "string" },
        "designation": {
          "type": "string",
          "enum": [
            "প্রধান শিক্ষক",
            "প্রধান শিক্ষক (ভারপ্রাপ্ত)",
            "সহকারী শিক্ষক",
            "অফিস সহকারী",
            "অফিস সহায়ক",
            "আয়া"
          ]
        },
        "subject": { "type": "string" },
        "mobile": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "joinDate": { "type": "string", "format": "date-time" },
        "education": { "type": "string" },
        "address": { "type": "string" },
        "photoUrl": { "type": "string" },
        "isActive": { "type": "boolean" },
        "staffType": { "type": "string", "enum": ["teacher", "staff"] }
      },
      "required": ["employeeId", "nameBn", "designation", "mobile", "joinDate", "photoUrl", "staffType", "isActive"]
    },
    "schoolInfo": {
      "title": "School Information",
      "description": "General information about the school.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "nameEn": { "type": "string" },
        "eiin": { "type": "string" },
        "code": { "type": "string" },
        "address": { "type": "string" },
        "logoUrl": { "type": "string" }
      },
      "required": ["name"]
    },
    "holiday": {
      "title": "Holiday",
      "description": "A holiday record.",
      "type": "object",
      "properties": {
        "date": { "type": "string", "format": "date" },
        "description": { "type": "string" }
      },
      "required": ["date", "description"]
    },
    "attendanceRecord": {
      "title": "Attendance Record",
      "description": "Daily attendance record for a class.",
      "type": "object",
      "properties": {
        "date": { "type": "string", "format": "date" },
        "academicYear": { "type": "string" },
        "className": { "type": "string" },
        "attendance": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "studentId": { "type": "string" },
              "status": { "type": "string", "enum": ["present", "absent"] }
            },
            "required": ["studentId", "status"]
          }
        }
      },
      "required": ["date", "academicYear", "className", "attendance"]
    },
    "feeCollection": {
      "title": "Fee Collection",
      "description": "A single fee collection transaction for a student.",
      "type": "object",
      "properties": {
        "studentId": { "type": "string" },
        "academicYear": { "type": "string" },
        "collectionDate": { "type": "string", "format": "date" },
        "description": { "type": "string", "description": "A brief description of the collection, e.g., 'Tuition Fee for January & February'" },
        "totalAmount": { "type": "number" },
        "transactionIds": {
            "type": "array",
            "items": { "type": "string" },
            "description": "IDs of the associated entries in the main transactions/cashbook collection."
        },
        "breakdown": {
          "type": "object",
          "description": "A detailed breakdown of the fees collected in this transaction.",
          "properties": {
            "tuitionCurrent": { "type": "number" },
            "tuitionAdvance": { "type": "number" },
            "tuitionDue": { "type": "number" },
            "tuitionFine": { "type": "number" },
            "examFeeHalfYearly": { "type": "number" },
            "examFeeAnnual": { "type": "number" },
            "examFeePreNirbachoni": { "type": "number" },
            "examFeeNirbachoni": { "type": "number" },
            "sessionFee": { "type": "number" },
            "admissionFee": { "type": "number" },
            "scoutFee": { "type": "number" },
            "developmentFee": { "type": "number" },
            "libraryFee": { "type": "number" },
            "tiffinFee": { "type": "number" }
          }
        }
      },
      "required": ["studentId", "academicYear", "collectionDate", "totalAmount"]
    },
    "result": {
      "title": "Result",
      "description": "Results for a class in a particular subject.",
      "type": "object",
      "properties": {
        "academicYear": { "type": "string" },
        "className": { "type": "string" },
        "group": { "type": "string" },
        "subject": { "type": "string" },
        "fullMarks": { "type": "number" },
        "results": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "studentId": { "type": "string" },
              "written": { "type": "number" },
              "mcq": { "type": "number" },
              "practical": { "type": "number" }
            },
            "required": ["studentId"]
          }
        }
      },
      "required": ["academicYear", "className", "subject", "fullMarks", "results"]
    },
    "transaction": {
      "title": "Transaction",
      "description": "An income or expense transaction record.",
      "type": "object",
      "properties": {
        "date": {
          "type": "string",
          "format": "date"
        },
        "type": {
          "type": "string",
          "enum": [
            "income",
            "expense"
          ]
        },
        "accountHead": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "amount": {
          "type": "number"
        },
        "academicYear": {
          "type": "string"
        },
        "feeCollectionId": {
          "type": "string",
          "description": "Optional ID linking this transaction to a specific fee collection event."
        }
      },
      "required": [
        "date",
        "type",
        "accountHead",
        "amount",
        "academicYear"
      ]
    },
    "classRoutine": {
      "title": "Class Routine",
      "description": "Weekly class routine for a specific class and group.",
      "type": "object",
      "properties": {
        "academicYear": { "type": "string" },
        "className": { "type": "string" },
        "group": { "type": "string" },
        "day": { 
          "type": "string",
          "enum": ["রবিবার", "সোমবার", "মঙ্গলবার", "বুধবার", "বৃহস্পতিবার"] 
        },
        "periods": {
          "type": "array",
          "items": { "type": "string" },
          "description": "List of subjects for each period of the day."
        }
      },
      "required": ["academicYear", "className", "day", "periods"]
    },
    "examRoutine": {
      "title": "Exam Routine",
      "description": "Schedule for a specific examination.",
      "type": "object",
      "properties": {
        "examName": { "type": "string" },
        "academicYear": { "type": "string" },
        "className": { "type": "string" },
        "group": { "type": "string" },
        "subject": { "type": "string" },
        "date": { "type": "string", "format": "date" },
        "time": { "type": "string" }
      },
      "required": ["examName", "academicYear", "className", "subject", "date", "time"]
    }
  },
  "auth": {
    "providers": ["emailPassword"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/user" },
      "description": "Stores user profile information, including their role."
    },
    "/students/{studentId}": {
      "schema": { "$ref": "#/entities/student" },
      "description": "Stores individual student records."
    },
    "/staff/{staffId}": {
      "schema": { "$ref": "#/entities/staff" },
      "description": "Stores individual teacher and staff records."
    },
    "/school/info": {
      "schema": { "$ref": "#/entities/schoolInfo" },
      "description": "Stores general school information. This is a single document."
    },
    "/holidays/{holidayId}": {
      "schema": { "$ref": "#/entities/holiday" },
      "description": "Stores holiday records."
    },
    "/attendance/{attendanceId}": {
      "schema": { "$ref": "#/entities/attendanceRecord" },
      "description": "Stores daily attendance records."
    },
    "/results/{resultId}": {
      "schema": { "$ref": "#/entities/result" },
      "description": "Stores results for a class in a particular subject."
    },
     "/feeCollections/{collectionId}": {
      "schema": { "$ref": "#/entities/feeCollection" },
      "description": "Stores fee collection records for students."
    },
    "/transactions/{transactionId}": {
      "schema": {
        "$ref": "#/entities/transaction"
      },
      "description": "Stores income and expense transaction records."
    },
    "/classRoutines/{routineId}": {
      "schema": { "$ref": "#/entities/classRoutine" },
      "description": "Stores weekly class routines."
    },
    "/examRoutines/{routineId}": {
      "schema": { "$ref": "#/entities/examRoutine" },
      "description": "Stores exam schedules."
    }
  }
}

    